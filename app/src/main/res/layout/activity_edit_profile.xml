<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".controller.EditProfileActivity">

    <!-- Toolbar -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#FFCDD2"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_gravity="top"
        android:weightSum="8">

        <ImageButton
            android:id="@+id/edit_profile_btn_back"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_back" />

        <TextView
            android:layout_width="0dp"
            android:layout_weight="4"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textStyle="bold"
            android:text="Sửa thông tin"
            android:labelFor="@+id/backButton"
            android:textColor="#000000"
            android:textSize="20sp"
            android:layout_gravity="center"
            android:layout_marginStart="20dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
            android:layout_marginTop="28dp"
        android:orientation="vertical">

        <!-- Profile Image -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            >

            <ImageView
                android:id="@+id/profile_avt"
                android:layout_width="126dp"
                android:layout_height="128dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/circle_background"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_profile" />
        </LinearLayout>

        <!-- Scrollable Content -->
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginHorizontal="20dp">

                <!-- Full Name EditText -->
                <EditText
                    android:id="@+id/txt_edit_fullName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="48dp"
                    android:padding="12dp"
                    android:text="Hoang Ngoc Dung"
                    android:enabled="false"
                    android:background="@drawable/border_edittext"
                    android:layout_marginBottom="20dp" />

                <!-- Code EditText -->
                <EditText
                    android:id="@+id/txt_edit_Code"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="48dp"
                    android:padding="12dp"
                    android:text="2021602133"
                    android:enabled="false"
                    android:background="@drawable/border_edittext"
                    android:layout_marginBottom="20dp" />

                <!-- Password EditText -->
                <EditText
                    android:id="@+id/txt_edit_Password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="48dp"
                    android:padding="12dp"
                    android:text="1233344"
                    android:background="@drawable/border_edittext"
                    android:layout_marginBottom="20dp" />

                <!-- Gender RadioGroup -->
                <RadioGroup
                    android:id="@+id/rdGender"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2"
                    android:allowClickWhenDisabled="false">

                    <RadioButton
                        android:id="@+id/erNam"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:minHeight="48dp"
                        android:text="Nam"
                        android:enabled="false"
                        android:textSize="18sp"
                        android:layout_marginBottom="10dp" />

                    <RadioButton
                        android:id="@+id/erNu"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:enabled="false"
                        android:minHeight="48dp"
                        android:layout_height="wrap_content"
                        android:text="Nữ"
                        android:textSize="18sp" />
                </RadioGroup>

                <!-- Phone Number EditText -->
                <EditText
                    android:id="@+id/txt_edit_Phonenumber"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="48dp"
                    android:padding="12dp"
                    android:text="******"
                    android:hint="*******"
                    android:background="@drawable/border_edittext"
                    android:layout_marginBottom="20dp" />

                <!-- Class EditText -->
                <EditText
                    android:id="@+id/txt_edit_Class"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="48dp"
                    android:padding="12dp"
                    android:text="CNTT02"
                    android:hint="CNTT02"
                    android:background="@drawable/border_edittext"
                    android:layout_marginBottom="20dp" />

                <!-- Faculty EditText -->
                <EditText
                    android:id="@+id/txt_edit_Faculty"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="48dp"
                    android:padding="12dp"
                    android:text="DHCNTTK16"
                    android:hint="DHCNTTK16"
                    android:background="@drawable/border_edittext"
                    android:layout_marginBottom="20dp" />

                <!-- Address EditText -->
                <EditText
                    android:id="@+id/txt_edit_Address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="48dp"
                    android:padding="12dp"
                    android:text="Ninh Binh"
                    android:hint="Hà Nội"
                    android:background="@drawable/border_edittext"
                    android:layout_marginBottom="20dp" />
            </LinearLayout>
        </ScrollView>

        <!-- Bottom Buttons -->
        <TableRow
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:weightSum="2"
            android:layout_gravity="bottom">

            <Button
                android:id="@+id/btn_confirm_edit"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="50dp"
                android:text="Cập nhật"
                android:background="@color/material_dynamic_primary70"
                android:layout_marginBottom="20dp" />

            <Button
                android:id="@+id/btn_without_edit"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="50dp"
                android:text="Bỏ qua"
                android:background="@color/material_dynamic_neutral95"
                android:layout_marginBottom="20dp" />
        </TableRow>
    </LinearLayout>
</FrameLayout>
